<!-- This Resource Dictionary defines all the colors and brushes for the application's "Light" theme. -->
<!-- It serves as the central color palette when the light theme is active. -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- This theme file also merges Styles.xaml, ensuring that all base control styles are available -->
    <!-- along with the light theme's specific color palette. This is key to the theming system. -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- =================================================================== -->
    <!-- ==                      COLOR DEFINITIONS                        == -->
    <!-- =================================================================== -->
    <!-- This section defines the raw color palette for the Light theme. -->
    <!-- These are not directly used by controls; they are referenced by the brushes below. -->

    <!-- Main Palette -->
    <Color x:Key="PrimaryBackgroundColor">#F5F5F7</Color>
    <Color x:Key="SecondaryBackgroundColor">#FFFFFF</Color>
    <Color x:Key="PrimaryAccentColor">#0078D4</Color>
    <!-- Standard Blue -->
    <Color x:Key="SecondaryAccentColor">#4C87B2</Color>

    <!-- Text -->
    <Color x:Key="PrimaryTextColor">#1D1D1F</Color>
    <Color x:Key="SecondaryTextColor">#6E6E73</Color>

    <!-- Borders -->
    <Color x:Key="BorderColor">#D2D2D7</Color>
    <Color x:Key="HighlightBorderColor">#A7A7AF</Color>

    <!-- Controls -->
    <Color x:Key="ControlBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ControlHoverColor">#E8E8ED</Color>
    <Color x:Key="ControlPressedColor">#D2D2D7</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#107C10</Color>
    <Color x:Key="WarningColor">#D83B01</Color>

    <!-- =================================================================== -->
    <!-- ==                       BRUSH DEFINITIONS                         == -->
    <!-- =================================================================== -->
    <!-- This section converts the Color definitions above into SolidColorBrush resources. -->
    <!-- These brushes are what controls in the application will bind to using DynamicResource. -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{StaticResource PrimaryAccentColor}"/>
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="{StaticResource SecondaryAccentColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HighlightBorderBrush" Color="{StaticResource HighlightBorderColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlHoverBrush" Color="{StaticResource ControlHoverColor}"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="{StaticResource ControlPressedColor}"/>
    <SolidColorBrush x:Key="GlyphBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>

</ResourceDictionary>