<!-- This UserControl defines the main image editing interface. -->
<!-- It consists of a side panel for details and thumbnails, and a central canvas for image interaction. -->
<UserControl x:Class="MyUserApp.Views.ImageEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:MyUserApp.ViewModels"
             xmlns:converters="clr-namespace:MyUserApp.Converters"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             xmlns:iconPacks="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Modern"
             xmlns:iconPacksMaterial="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Material"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:ImageEditorViewModel}"
             d:DesignHeight="800" d:DesignWidth="1280"
             Background="{DynamicResource PrimaryBackgroundBrush}">

    <!-- Defines resources used within this UserControl, primarily value converters. -->
    <UserControl.Resources>
        <converters:FullPathToFileNameConverter x:Key="FullPathToFileNameConverter"/>
        <converters:PathToBitmapImageConverter x:Key="PathToBitmapImageConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- The main layout grid, dividing the view into a left panel, a splitter, and a main content area. -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="250"/>
            <!-- Left Panel -->
            <ColumnDefinition Width="5"/>
            <!-- Grid Splitter -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content Area -->
        </Grid.ColumnDefinitions>

        <!-- =================================================================== -->
        <!-- ==                        LEFT SIDE PANEL                        == -->
        <!-- =================================================================== -->
        <Border Grid.Column="0" Background="{DynamicResource SecondaryBackgroundBrush}" Padding="10">
            <DockPanel>
                <!-- Project Name Header -->
                <!-- The text color changes and an asterisk appears if there are unsaved changes (IsDirty). -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5,0,5,15">
                    <TextBlock FontSize="16" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" ToolTip="{Binding ProjectName}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{Binding ProjectName}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                        <Setter Property="Foreground" Value="Orange"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="*" FontSize="16" FontWeight="SemiBold" Foreground="Orange"
                               Visibility="{Binding IsDirty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Bottom Action Buttons for adding/deleting images. -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Margin="0,10,0,0">
                    <Button Command="{Binding AddImagesCommand}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Kind="Image" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Image(s)"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding DeleteImageCommand}" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Kind="Delete" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete Selected Image"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Scrollable area for all other controls in the left panel. -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Expander for editing core project details. -->
                        <Expander Header="Project Details" IsExpanded="True">
                            <Grid Margin="10,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Aircraft Type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AircraftTypes}" SelectedItem="{Binding ReportAircraftType, Mode=TwoWay}" Margin="0,3"/>

                                <TextBlock Grid.Row="1" Text="Tail Number:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding TailNumbers}" SelectedItem="{Binding ReportTailNumber, Mode=TwoWay}" Margin="0,3"/>

                                <TextBlock Grid.Row="2" Text="Side:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding AircraftSides}" SelectedItem="{Binding ReportAircraftSide, Mode=TwoWay}" Margin="0,3"/>

                                <TextBlock Grid.Row="3" Text="Reason:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Reasons}" SelectedItem="{Binding ReportReason, Mode=TwoWay}" Margin="0,3"/>

                                <TextBlock Grid.Row="4" Text="Inspector:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding Usernames}" SelectedItem="{Binding ReportInspectorName, Mode=TwoWay}" Margin="0,3"/>

                                <TextBlock Grid.Row="5" Text="Verifier:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Usernames}" SelectedItem="{Binding ReportVerifierName, Mode=TwoWay}" Margin="0,3"/>
                            </Grid>
                        </Expander>

                        <!-- Expander for toggling the visibility of different annotation types. -->
                        <Expander Header="Annotation Filters" IsExpanded="True">
                            <StackPanel Margin="10,5">
                                <CheckBox Content="Show Inspector" IsChecked="{Binding ShowInspectorAnnotations, Mode=TwoWay}" Margin="0,3"/>
                                <CheckBox Content="Show Verifier" IsChecked="{Binding ShowVerifierAnnotations, Mode=TwoWay}" Margin="0,3"/>
                                <CheckBox Content="Show AI" IsChecked="{Binding ShowAiAnnotations, Mode=TwoWay}" Margin="0,3"/>
                            </StackPanel>
                        </Expander>

                        <!-- Expander for adjusting image brightness and contrast. -->
                        <Expander Header="Image Adjustments" IsExpanded="True">
                            <Grid Margin="10,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Text="Brightness:" VerticalAlignment="Center"/>
                                <Button Grid.Row="0" Grid.Column="1" Content="Reset" Command="{Binding ResetBrightnessCommand}" Style="{DynamicResource SecondaryButtonStyle}" Padding="5,2"/>
                                <Slider Grid.Row="1" Grid.ColumnSpan="2" Minimum="-1" Maximum="1" Value="{Binding BrightnessValue, Mode=TwoWay}" Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="2" Text="Contrast:" VerticalAlignment="Center"/>
                                <Button Grid.Row="2" Grid.Column="1" Content="Reset" Command="{Binding ResetContrastCommand}" Style="{DynamicResource SecondaryButtonStyle}" Padding="5,2"/>
                                <Slider Grid.Row="3" Grid.ColumnSpan="2" Minimum="0" Maximum="4" Value="{Binding ContrastValue, Mode=TwoWay}"/>
                            </Grid>
                        </Expander>

                        <!-- List of image thumbnails for the current report. -->
                        <ListView ItemsSource="{Binding ImageThumbnails}" SelectedItem="{Binding SelectedImage, Mode=TwoWay}" 
                                  Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,5,0,0">
                            <!-- Custom style to highlight the selected ListViewItem. -->
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="border" BorderBrush="Transparent" BorderThickness="3" CornerRadius="3" Margin="0,5">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryAccentBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <!-- DataTemplate defines how each thumbnail item is displayed. -->
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="120">
                                        <Image Source="{Binding Converter={StaticResource PathToBitmapImageConverter}}" Stretch="UniformToFill"/>
                                        <Border Background="#A0000000">
                                            <TextBlock Text="{Binding Converter={StaticResource FullPathToFileNameConverter}}" Foreground="White" 
                                                       VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5" TextTrimming="CharacterEllipsis" ToolTip="{Binding}"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- A splitter that allows the user to resize the left panel. -->
        <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource PrimaryBackgroundBrush}" HorizontalAlignment="Stretch" />

        <!-- =================================================================== -->
        <!-- ==                   MAIN CONTENT: IMAGE EDITOR                  == -->
        <!-- =================================================================== -->
        <Grid Grid.Column="2">
            <!-- The SkiaSharp canvas element where all image rendering and drawing occurs. -->
            <!-- Event handlers (PaintSurface, Mouse*, KeyDown) are wired to methods in the code-behind, which then call the ViewModel. -->
            <skia:SKElement x:Name="SkiaElement" PaintSurface="CanvasView_PaintSurface" MouseWheel="CanvasView_MouseWheel" MouseLeftButtonDown="CanvasView_MouseLeftButtonDown" MouseMove="CanvasView_MouseMove" MouseLeftButtonUp="CanvasView_MouseLeftButtonUp" KeyDown="SkiaElement_KeyDown" Focusable="True"/>

            <!-- Toolbar overlay at the top right of the canvas. -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10">
                <!-- Panel to switch active role, visible only for dual-role users. -->
                <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="3" Padding="5" Margin="0,0,10,0"
                        Visibility="{Binding IsDualRoleUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">
                            <Run Text="Active Role:" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <Run Text="{Binding ActiveRole, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </TextBlock>
                        <Button Content="Switch" Command="{Binding SwitchRoleCommand}" Style="{DynamicResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Border>
                <!-- Toolbar for image view manipulation commands. -->
                <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="3">
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{DynamicResource IconButtonToolBarStyle}" Command="{Binding UndoCommand}" ToolTip="Undo">
                            <iconPacks:PackIconModern Kind="Undo"/>
                        </Button>
                        <Button Style="{DynamicResource IconButtonToolBarStyle}" Command="{Binding RedoCommand}" ToolTip="Redo">
                            <iconPacks:PackIconModern Kind="Redo"/>
                        </Button>
                        <Button Style="{DynamicResource IconButtonToolBarStyle}" Command="{Binding RotateLeftCommand}" ToolTip="Rotate Left">
                            <iconPacksMaterial:PackIconMaterial Kind="RotateLeft"/>
                        </Button>
                        <Button Style="{DynamicResource IconButtonToolBarStyle}" Command="{Binding RotateRightCommand}" ToolTip="Rotate Right">
                            <iconPacksMaterial:PackIconMaterial Kind="RotateRight"/>
                        </Button>
                        <Button Style="{DynamicResource IconButtonToolBarStyle}" Command="{Binding ResetViewCommand}" ToolTip="Reset View">
                            <iconPacksMaterial:PackIconMaterial Kind="FitToScreenOutline"/>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Action buttons overlay at the bottom right of the canvas. -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
                <Button Content="Run AI Analysis" Command="{Binding RunAiAnalysisCommand}" Style="{DynamicResource SecondaryButtonStyle}"/>
                <!-- Button to save changes and export the report. -->
                <Button Command="{Binding SaveOnlyCommand}" Margin="10,0,0,0" Style="{StaticResource SaveButtonStyle}" ToolTip="Save all changes and export the full report."/>
                <!-- Button to save, export, and return to the project hub. -->
                <Button Content="Save and Finish" Command="{Binding FinishEditingCommand}" Margin="10,0,0,0" Style="{StaticResource PrimaryActionButtonStyle}" ToolTip="Save all changes, export, and return to the project hub."/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>