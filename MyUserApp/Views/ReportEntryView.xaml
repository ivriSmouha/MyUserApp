<!-- Views/ReportEntryView.xaml -->
<UserControl x:Class="MyUserApp.Views.ReportEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- Header with Title and Logout button -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="New Inspection Report" FontSize="24" FontWeight="Bold"/>
            <Button Content="Logout" Command="{Binding LogoutCommand}" Margin="50,0,0,0" Width="80" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Main Form Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Labels -->
                    <ColumnDefinition Width="*"/>
                    <!-- Inputs -->
                    <ColumnDefinition Width="2*"/>
                    <!-- Image List -->
                </Grid.ColumnDefinitions>

                <!-- Left side of the form -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Aircraft Type -->
                        <TextBlock Grid.Row="0" Text="Aircraft Type:" VerticalAlignment="Center" Margin="5"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Margin="5"
                                  ItemsSource="{Binding AircraftTypes}"
                                  SelectedItem="{Binding SelectedAircraftType}"/>

                        <!-- Tail Number -->
                        <TextBlock Grid.Row="1" Text="Tail Number:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding TailNumber}"/>

                        <!-- Aircraft Side -->
                        <TextBlock Grid.Row="2" Text="Aircraft Side:" VerticalAlignment="Center" Margin="5"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" Margin="5"
                                  ItemsSource="{Binding AircraftSides}"
                                  SelectedItem="{Binding SelectedAircraftSide}"/>

                        <!-- Reason -->
                        <TextBlock Grid.Row="3" Text="Reason for Inspection:" VerticalAlignment="Center" Margin="5"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Margin="5"
                                  ItemsSource="{Binding Reasons}"
                                  SelectedItem="{Binding SelectedReason}"/>

                        <!-- Inspector Name (Read-only for user) -->
                        <TextBlock Grid.Row="4" Text="Inspector Name:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Text="{Binding InspectorName}" IsReadOnly="True"/>

                        <!-- Verifier Name -->
                        <TextBlock Grid.Row="5" Text="Verifier Name:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Margin="5" Text="{Binding VerifierName}"/>
                    </Grid>
                </StackPanel>

                <!-- Right side of the form for images -->
                <GroupBox Header="Selected Images" Grid.Column="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListView ItemsSource="{Binding SelectedImagePaths}" Margin="5"/>
                        <Button Grid.Row="1" Content="Select Images..." Margin="5"
                                Command="{Binding SelectImagesCommand}"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

        <!-- Bottom Action Bar -->
        <Button Grid.Row="2" Content="Submit Report" Margin="0,20,0,0" HorizontalAlignment="Center"
                Padding="20,10" FontSize="16" FontWeight="Bold" Command="{Binding SubmitReportCommand}"/>
    </Grid>
</UserControl>