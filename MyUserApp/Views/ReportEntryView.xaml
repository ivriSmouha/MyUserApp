<!-- This UserControl defines the UI for creating a new inspection report. -->
<!-- It provides a form for entering report details and selecting initial images. -->
<UserControl x:Class="MyUserApp.Views.ReportEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:MyUserApp.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ReportEntryViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource PrimaryBackgroundBrush}">

    <!-- Main layout grid for the entire view, structured with a header, content, and footer. -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for the header -->
            <RowDefinition Height="*"/>
            <!-- Row for the main form content -->
            <RowDefinition Height="Auto"/>
            <!-- Row for the action buttons at the bottom -->
        </Grid.RowDefinitions>

        <!-- =================================================================== -->
        <!-- ==                           HEADER                              == -->
        <!-- =================================================================== -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="New Inspection Report" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Logout" Command="{Binding LogoutCommand}" Style="{DynamicResource SecondaryButtonStyle}" HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- =================================================================== -->
        <!-- ==                       MAIN FORM AREA                          == -->
        <!-- =================================================================== -->
        <!-- This grid splits the main content area into two columns for details and images. -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" MinWidth="350"/>
                <!-- Left column for report details -->
                <ColumnDefinition Width="2*"/>
                <!-- Right column for image selection -->
            </Grid.ColumnDefinitions>

            <!-- Left side of the form: Report Details input fields. -->
            <GroupBox Header="Report Details" Grid.Column="0" Margin="0,0,20,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Column for labels -->
                        <ColumnDefinition Width="*"/>
                        <!-- Column for input controls -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Each row contains a label and a ComboBox for selecting report data. -->
                    <TextBlock Grid.Row="0" Text="Aircraft Type:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Margin="5" ItemsSource="{Binding AircraftTypes}" SelectedItem="{Binding SelectedAircraftType}" IsEditable="False"/>

                    <TextBlock Grid.Row="1" Text="Tail Number:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Margin="5" ItemsSource="{Binding TailNumbers}" SelectedItem="{Binding SelectedTailNumber}" IsEditable="False"/>

                    <TextBlock Grid.Row="2" Text="Aircraft Side:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" ItemsSource="{Binding AircraftSides}" SelectedItem="{Binding SelectedAircraftSide}" IsEditable="False"/>

                    <TextBlock Grid.Row="3" Text="Reason for Inspection:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Margin="5" ItemsSource="{Binding Reasons}" SelectedItem="{Binding SelectedReason}" IsEditable="False"/>

                    <TextBlock Grid.Row="4" Text="Inspector Name:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" Margin="5" ItemsSource="{Binding Usernames}" SelectedItem="{Binding SelectedInspector}"/>

                    <TextBlock Grid.Row="5" Text="Verifier Name:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Row="5" Grid.Column="1" Margin="5" ItemsSource="{Binding Usernames}" SelectedItem="{Binding SelectedVerifier}"/>
                </Grid>
            </GroupBox>

            <!-- Right side of the form: Image selection and management. -->
            <GroupBox Header="Selected Images" Grid.Column="1">
                <DockPanel>
                    <!-- Button at the bottom to open the file dialog for selecting images. -->
                    <Button DockPanel.Dock="Bottom" Content="Select Images..." Margin="5,10,5,5" Command="{Binding SelectImagesCommand}"/>
                    <!-- ListView displays the file paths of the images that have been selected. -->
                    <ListView ItemsSource="{Binding SelectedImagePaths}" Margin="5" Background="{DynamicResource SecondaryBackgroundBrush}"/>
                </DockPanel>
            </GroupBox>
        </Grid>

        <!-- =================================================================== -->
        <!-- ==                        ACTION BUTTONS                         == -->
        <!-- =================================================================== -->
        <!-- Buttons for submitting or canceling the report creation, aligned to the right. -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
            <Button Content="Submit Report" Command="{Binding SubmitReportCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>