<!-- This UserControl defines the UI for the Project Hub. -->
<!-- It serves as the main dashboard for non-admin users, showing their assigned projects. -->
<UserControl x:Class="MyUserApp.Views.ProjectHubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:MyUserApp.Models"
             xmlns:iconPacks="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Modern"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="1100"
             Background="{DynamicResource PrimaryBackgroundBrush}">

    <!-- Main layout grid for the entire view. -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for the header -->
            <RowDefinition Height="*"/>
            <!-- Row for the main content area -->
        </Grid.RowDefinitions>

        <!-- =================================================================== -->
        <!-- ==                           HEADER                              == -->
        <!-- =================================================================== -->
        <DockPanel Grid.Row="0">
            <!-- Personalized welcome message for the logged-in user. -->
            <TextBlock Text="{Binding WelcomeMessage}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <!-- Action buttons docked to the right. -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{DynamicResource IconButtonToolBarStyle}" Command="{Binding SwitchThemeCommand}" ToolTip="Switch Theme">
                    <iconPacks:PackIconModern Kind="WeatherSun" />
                </Button>
                <Button Content="Logout" Command="{Binding LogoutCommand}" Style="{DynamicResource SecondaryButtonStyle}" Margin="10,0,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- =================================================================== -->
        <!-- ==                         MAIN CONTENT                          == -->
        <!-- =================================================================== -->
        <!-- Main content area, split into three columns: Actions, Projects List, and Image Preview. -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Actions -->
                <ColumnDefinition Width="*"/>
                <!-- Projects List -->
                <ColumnDefinition Width="300"/>
                <!-- Image Preview -->
            </Grid.ColumnDefinitions>

            <!-- ======================= ACTIONS COLUMN ======================= -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <Button Command="{Binding StartNewProjectCommand}" ToolTip="Begin a new inspection report." Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconModern Kind="Add" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Start New Project" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding OpenProjectCommand}" ToolTip="Open the selected project from the list." Margin="0,10,0,0" Padding="15,10" Style="{DynamicResource SecondaryButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconModern Kind="FolderOpen" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Open Selected Project" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- ======================= PROJECTS LIST COLUMN ======================= -->
            <DockPanel Grid.Column="1">
                <!-- Filter input area at the top of the column. -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5,0,5,10">
                    <TextBlock Text="Filter:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox Width="200" Margin="5,0" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <DataGrid ItemsSource="{Binding ProjectsView}" 
                          SelectedItem="{Binding SelectedProject}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None">

                    <!-- [FIX] Style for column headers with standard Hand cursor. -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <!-- 
                      [FIX] This style provides the subtle border, the row cursor, and a margin for separation.
                      This combination creates the clean look you wanted.
                    -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDualRole}" Value="True">
                                    <Setter Property="BorderBrush" Value="MediumOrchid"/>
                                </DataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding CurrentUserRole}" Value="Inspector"/>
                                        <Condition Binding="{Binding IsDualRole}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryAccentBrush}"/>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding CurrentUserRole}" Value="Verifier"/>
                                        <Condition Binding="{Binding IsDualRole}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="Goldenrod"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Your Role" Binding="{Binding RoleDisplayString}" SortMemberPath="RoleDisplayString" Width="140"/>
                        <DataGridTextColumn Header="Project Name" Binding="{Binding ProjectName}" SortMemberPath="ProjectName" Width="*"/>
                        <DataGridTextColumn Header="Inspector" Binding="{Binding InspectorName}" SortMemberPath="InspectorName" Width="120"/>
                        <DataGridTextColumn Header="Verifier" Binding="{Binding VerifierName}" SortMemberPath="VerifierName" Width="120"/>
                        <DataGridTextColumn Header="Created" Binding="{Binding CreationDate, StringFormat='g'}" SortMemberPath="CreationDate" Width="130"/>
                        <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModifiedDate, StringFormat='g'}" SortMemberPath="LastModifiedDate" Width="130"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>

            <!-- ======================= IMAGE PREVIEW COLUMN ======================= -->
            <GroupBox Grid.Column="2" Header="Image Preview" Margin="20,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <!-- Area for the image -->
                        <RowDefinition Height="Auto"/>
                        <!-- Area for the controls -->
                    </Grid.RowDefinitions>

                    <!-- Displays the preview image of the selected project. -->
                    <Image Grid.Row="0" Source="{Binding PreviewImageSource}" Stretch="Uniform" Margin="5"/>

                    <!-- Navigation controls for the image previewer. -->
                    <!-- This section is hidden if the selected project has no images. -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.Style>
                            <Style TargetType="{x:Type Grid}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedProject.Report.ImagePaths.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Prev" HorizontalAlignment="Left" Command="{Binding PreviousImageCommand}" Style="{DynamicResource SecondaryButtonStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding ImageCounterText}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0" FontWeight="SemiBold"/>
                        <Button Grid.Column="2" Content="Next" HorizontalAlignment="Right" Command="{Binding NextImageCommand}" Style="{DynamicResource SecondaryButtonStyle}"/>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>