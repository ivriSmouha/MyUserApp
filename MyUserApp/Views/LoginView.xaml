<!-- This UserControl defines the UI for the application's login screen. -->
<UserControl x:Class="MyUserApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Defines local resources, such as a drop shadow effect for the login panel. -->
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="0" BlurRadius="15" Color="{DynamicResource PrimaryAccentColor}" Opacity="0.3"/>
    </UserControl.Resources>

    <!-- The main container for the login form, styled as a floating card. -->
    <!-- It is centered horizontally and vertically within its parent container. -->
    <Border Background="{DynamicResource SecondaryBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="5"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Padding="30"
            Effect="{StaticResource DropShadowEffect}">

        <!-- A StackPanel arranges the form elements vertically. -->
        <StackPanel Width="250">
            <!-- Header text for the login form. -->
            <TextBlock Text="Welcome" FontSize="28" FontWeight="Bold" Margin="0,0,0,5" HorizontalAlignment="Center"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Text="Please sign in to continue" FontSize="14" Margin="0,0,0,25" HorizontalAlignment="Center"
                       Foreground="{DynamicResource SecondaryTextBrush}"/>

            <!-- Username input section. -->
            <TextBlock Text="Username" Margin="0,0,0,5" Foreground="{DynamicResource SecondaryTextBrush}"/>
            <!-- The TextBox's Text property is bound to the Username property in the ViewModel. -->
            <!-- UpdateSourceTrigger=PropertyChanged ensures the ViewModel is updated on every keystroke. -->
            <TextBox Margin="0,0,0,15" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Password input section. -->
            <TextBlock Text="Password" Margin="0,0,0,5" Foreground="{DynamicResource SecondaryTextBrush}"/>
            <!-- A PasswordBox is used for security, which does not support direct data binding. -->
            <!-- The PasswordChanged event is handled in the code-behind to update the ViewModel's Password property. -->
            <PasswordBox Name="PasswordBox" Margin="0,0,0,25"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <!-- The login button. -->
            <!-- Its Command is bound to the LoginCommand in the ViewModel. -->
            <!-- IsDefault="True" allows the user to press the Enter key to trigger this button. -->
            <Button Content="Login" Command="{Binding LoginCommand}" IsDefault="True"/>
        </StackPanel>
    </Border>
</UserControl>